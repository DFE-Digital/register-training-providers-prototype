{
  "name": "register-training-providers-prototype",
  "description": "Prototype for a ‘Register of training providers’ concept",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "db:build": "npm run db:migrate && npm run db:seed",
    "db:migrate": "npx sequelize db:migrate --migrations-path ./app/migrations --config ./app/config/config.json",
    "db:seed": "npx sequelize db:seed:all --seeders-path ./app/seeders --config ./app/config/config.json",
    "postinstall": "npm run db:build",
    "dev": "govuk-prototype-kit dev",
    "serve": "govuk-prototype-kit serve",
    "start": "govuk-prototype-kit start"
  },
  "dependencies": {
    "connect-flash": "^0.1.1",
    "dotenv": "^17.2.3",
    "govuk-frontend": "^5.13.0",
    "govuk-prototype-kit": "^13.18.1",
    "gray-matter": "^4.0.3",
    "inflection": "^3.0.2",
    "luxon": "^3.7.2",
    "marked": "^17.0.0",
    "marked-gfm-heading-id": "^4.1.3",
    "numeral": "^2.0.6",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0"
  }
}
