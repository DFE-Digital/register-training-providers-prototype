{% extends "layouts/main.njk" %}

{% set primaryNavId = "providers" %}

{% set title = "Check your answers" %}

{% if currentProvider %}
  {% set caption = currentProvider.operating_name %}
{% else %}
  {% set caption = "Add provider" %}
{% endif %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-l">
      <span class="govuk-caption-l">{{ caption }}</span>
      {{ title }}
    </h1>

    <form action="{{ actions.save }}" method="post" accept-charset="utf-8" novalidate>

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "Operating name"
            },
            value: {
              text: provider.operatingName
            },
            actions: {
              items: [
                {
                  href: "#",
                  text: "Change",
                  visuallyHiddenText: "operating name"
                }
              ]
            }
          },
          {
            key: {
              text: "Legal name"
            },
            value: {
              text: provider.legalName
            },
            actions: {
              items: [
                {
                  href: "#",
                  text: "Change",
                  visuallyHiddenText: "legal name"
                }
              ]
            }
          },
          {
            key: {
              text: "Provider type"
            },
            value: {
              text: provider.type
            },
            actions: {
              items: [
                {
                  href: "#",
                  text: "Change",
                  visuallyHiddenText: "provider type"
                }
              ]
            }
          },
          {
            key: {
              text: "UK provider reference number (UKPRN)"
            },
            value: {
              text: provider.ukprn
            },
            actions: {
              items: [
                {
                  href: "#",
                  text: "Change",
                  visuallyHiddenText: "UK provider reference number (UKPRN)"
                }
              ]
            }
          },
          {
            key: {
              text: "Unique reference number (URN)"
            },
            value: {
              text: provider.urn
            },
            actions: {
              items: [
                {
                  href: "#",
                  text: "Change",
                  visuallyHiddenText: "unique reference number"
                }
              ]
            }
          } if provider.type == "school",
          {
            key: {
              text: "Provider code"
            },
            value: {
              text: provider.code
            },
            actions: {
              items: [
                {
                  href: "#",
                  text: "Change",
                  visuallyHiddenText: "provider code"
                }
              ]
            }
          }
        ]
      }) }}

      <h2 class="govuk-heading-m govuk-!-margin-top-7">Accreditation</h2>

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "Accredited provider number"
            },
            value: {
              text: ""
            }
          },
          {
            key: {
              text: "Date accreditation starts"
            },
            value: {
              text: provider.address.line2
            }
          },
          {
            key: {
              text: "Date accreditation ends"
            },
            value: {
              text: provider.address.line3
            }
          }
        ]
      }) }}

      <h2 class="govuk-heading-m govuk-!-margin-top-7">Address</h2>

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "Address line 1"
            },
            value: {
              text: provider.address.line1
            }
          },
          {
            key: {
              text: "Address line 2"
            },
            value: {
              text: provider.address.line2
            }
          },
          {
            key: {
              text: "Address line 3"
            },
            value: {
              text: provider.address.line3
            }
          },
          {
            key: {
              text: "Town"
            },
            value: {
              text: provider.address.town
            }
          },
          {
            key: {
              text: "County"
            },
            value: {
              text: provider.address.county
            }
          },
          {
            key: {
              text: "Postcode"
            },
            value: {
              text: provider.address.postcode
            }
          }
        ]
      }) }}

      {{ govukButton({
        text: "Save provider"
      }) }}

    </form>

    <p class="govuk-body">
      <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
    </p>

  </div>
</div>

{% endblock %}
