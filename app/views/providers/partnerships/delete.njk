{% extends "layouts/main.njk" %}

{% set primaryNavId = "providers" %}

{% set title = "Confirm you want to delete the partnership with " + titlePartnerName %}
{% set caption = "Delete partnership - " + captionProviderName %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    {% include "_includes/page-heading.njk" %}

    <form action="{{ actions.delete }}" method="post" accept-charset="utf-8" novalidate>

      {% if not partnership.endsOn %}
        <p class="govuk-body">
          If you do not want to delete the partnership, but update that it has ended, <a href="{{ actions.change }}" class="govuk-link">add the partnership end date.</a>
        </p>
      {% endif %}

      {{ govukWarningText({
        text: "Removing a partnership is permanent â€“ you cannot undo it.",
        iconFallbackText: "Warning"
      }) }}

      {{ govukButton({
        text: "Delete partnership",
        classes: "govuk-button--warning"
      }) }}

    </form>

    <p class="govuk-body">
      <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
    </p>

  </div>
</div>

{% endblock %}
